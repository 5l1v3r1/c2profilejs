.card.m-2
  .card-body
    div(data-toggle='collapse', href='#httpPostCollapse')
      h4.text-center HTTP Post
    .collapse.container-fluid#httpPostCollapse
      .row
        .col-sm-9
          .input-group.mb-3
            .input-group-prepend
              span.input-group-text URI
            input.form-control(type='text')
        .col-sm-3
          .input-group.mb-3
            .input-group-prepend
              span.input-group-text VERB
            select.custom-select
              each val in verbs
                option(value=val)=val
      .row
        .col-sm-6
          h5.text-center Client
        .col-sm-6
          h5.text-center Server
      .row
        .col-sm-6
          +headerparam('httppostclient')
        .col-sm-6
          +headerparam('httppostserver')
      .row
        .col-sm-6
          +transform('httppostclient')
        .col-sm-6
          +transform('httppostserver')
      .row
        .col-sm-6
          +termination
        .col-sm-6
          +termination
